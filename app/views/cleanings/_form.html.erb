<%= form_with(model: cleaning) do |form| %>
  <% if cleaning.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cleaning.errors.count, "error") %> prohibited this service from being saved:</h2>
      <ul>
        <% babble.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_time, class: "label" %>
    <div class="control">
      <%= form.date_field :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :address_id, class: "label" %>
    <div class="control">
      <%= form.collection_select :address_id, Address.order(:alias), :id, :alias, include_blank: false %>
    </div>
  </div>

  <div class="field">
    <%= form.label :client_id, class: "label" %>
    <div class="control">
      <%= form.number_field :client_id, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :employee_id, class: "label" %>
    <div class="control">
      <%= form.collection_select :employee_id, Employee.includes(:user).order('users.name'), :id, :alias, include_blank: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :admin_id, class: "label" %>
    <div class="control">
      <%= form.number_field :admin_id, class: "form-control" %>
    </div>
  </div>

  <div class="field">
    <%= form.check_box :approved %>
    <%= form.label :approved%>
  </div>

  <div class="field">
    <%= form.label :price, class: "label" %>
    <div class="control">
      <%= form.number_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-primary" %>
  </div>

<% end %>
